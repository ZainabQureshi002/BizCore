@model BizCore.Models.Supplier

<h1>Supplier Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        <p class="card-text"><strong>City:</strong> @Model.City</p>
        <p class="card-text"><strong>Phone:</strong> @Model.Phone</p>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
