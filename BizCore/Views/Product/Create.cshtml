@model BizCore.Models.Products

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageFile">Upload Picture</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PurchasePrice">Purchase Price</label>
        <input type="number" asp-for="PurchasePrice" class="form-control" step="0.01" />
        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SalesPrice">Sales Price</label>
        <input type="number" asp-for="SalesPrice" class="form-control" step="0.01" />
        <span asp-validation-for="SalesPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="InStock">In Stock</label>
        <input type="number" asp-for="InStock" class="form-control" />
        <span asp-validation-for="InStock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

