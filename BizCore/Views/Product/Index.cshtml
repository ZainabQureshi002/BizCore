@model IEnumerable<BizCore.Models.Products>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Picture</th>
            <th>Purchase Price</th>
            <th>Sales Price</th>
            <th>In Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.PictureUrl))
                    {
                        <img src="@product.PictureUrl" alt="@product.Name" style="width:50px; height:auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.PurchasePrice</td>
                <td>@product.SalesPrice</td>
                <td>@product.InStock</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
