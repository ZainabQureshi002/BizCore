@model BizCore.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ProductId" method="post">
    @Html.AntiForgeryToken()

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this product?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="form-group">
        <label>Name:</label>
        <p class="form-control-static">@Model.Name</p>
    </div>

    <div class="form-group">
        <label>Description:</label>
        <p class="form-control-static">@Model.Description</p>
    </div>

    <div class="form-group">
        <label>Purchase Price:</label>
        <p class="form-control-static">@Model.PurchasePrice</p>
    </div>

    <div class="form-group">
        <label>Sales Price:</label>
        <p class="form-control-static">@Model.SalesPrice</p>
    </div>

    <div class="form-group">
        <label>In Stock:</label>
        <p class="form-control-static">@Model.InStock</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.PictureUrl))
    {
        <div class="form-group">
            <label>Current Picture:</label>
            <img src="@Model.PictureUrl" alt="Product Image" class="img-thumbnail" style="max-width:150px;" />
        </div>
    }

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
