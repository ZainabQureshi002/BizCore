@model IEnumerable<BizCore.Models.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Orders";
}

<a asp-action="Create" class="btn btn-success mt-3">Create New Order</a>
<h2 class="text-center my-4">Orders</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Type</th>
            <th>Customer</th>
            <th>Supplier</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderType</td>
                <td>@order.CustomerName ?? "-"</td>
                <td>@order.SupplierName ?? "-"</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



