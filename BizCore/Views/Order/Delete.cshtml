@model BizCore.Models.ViewModels.OrderDeleteViewModel

@{
    ViewData["Title"] = "Delete Order";
}

<h2 class="text-center my-4">Delete Order</h2>

<div class="p-4 border rounded shadow-sm bg-light">
    <h4>Are you sure you want to delete this order?</h4>
    <dl class="row mt-3">
        <dt class="col-sm-3">Order ID</dt>
        <dd class="col-sm-9">@Model.OrderId</dd>

        <dt class="col-sm-3">Order Type</dt>
        <dd class="col-sm-9">@Model.OrderType</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.CustomerName</dd>

        <dt class="col-sm-3">Supplier</dt>
        <dd class="col-sm-9">@Model.SupplierName</dd>

        <dt class="col-sm-3">Order Date</dt>
        <dd class="col-sm-9">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Total Items</dt>
        <dd class="col-sm-9">@Model.TotalItems</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">$@Model.TotalPrice</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.OrderId" method="post">
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>
