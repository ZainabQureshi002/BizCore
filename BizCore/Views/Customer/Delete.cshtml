@model BizCore.Models.Customers

@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<h3>Are you sure you want to delete this customer?</h3>

<div>
    <h4>Customer Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <!-- Form to submit the delete action -->
    <form method="post" action="@Url.Action("DeleteConfirmed", "Customer", new { id = Model.CustomerId })">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
