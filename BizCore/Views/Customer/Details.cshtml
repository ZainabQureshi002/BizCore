@model BizCore.Models.Customers

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div class="card">
    <div class="card-header">
        Details for Customer: @Model.Name
    </div>
    <div class="card-body">
        <p><strong>Customer ID:</strong> @Model.CustomerId</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>City:</strong> @Model.City</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
